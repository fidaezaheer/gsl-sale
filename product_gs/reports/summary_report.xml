<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="summary_report_base">
            <div class="container-fluid o_stock_reports_page o_stock_reports_no_print">
                <span class="o_report_heading text-center">
                    <h1>Summary Report</h1>
                </span>
                <span>
                    <t t-esc="context" />
                </span>
                <div class="o_stock_reports_table table-responsive">
                    <table class="table">
                        <thead>
                            <colgroup>
                                <col/>
                                <col style="background-color:#FAD7A0" span="3" />
                                <col style="background-color:#F9E79F" span="3" />
                                <col style="background-color:#ABEBC6" span="3" />
                                <col style="background-color:#CCB38C" />
                            </colgroup>
                            <tr class="o_report_header">
                                <th class="o_report_line_header"></th>
                                <th class="o_report_line_header" colspan="3" >Initial Inventory</th>
                                <th class="o_report_line_header" colspan="3">Open Inventory</th>
                                <th class="o_report_line_header" colspan="3">Closed Inventory</th>
                                <th class="o_report_line_header">Difference</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td>Quantity</td>
                                <td>Weight</td>
                                <td>%</td>
                                <td>Quantity</td>
                                <td>Weight</td>
                                <td>%</td>
                                <td>Quantity</td>
                                <td>Weight</td>
                                <td>%</td>
                                <td>Tonnage</td>
                            </tr>
                            <t t-foreach="weight_summary['lines']" t-as="line">
                                <tr>
                                    <t t-foreach="line" t-as="cell">
                                        <td>
                                            <t t-esc="cell" />
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <td>
                                    Estimated FMV
                                </td>
                                <td colspan="3" style="text-align:right">
                                    $ <t t-esc="weight_summary['fmv']['intake_fmv']" />
                                </td>
                                <td colspan="3">
                                    
                                </td>
                                <td colspan="3" style="text-align:right">
                                    $ <t t-esc="weight_summary['fmv']['closed_fmv']" />
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    Estimated FMV Donation
                                </td>
                                <td colspan="3" style="text-align:right">
                                    $ <t t-esc="weight_summary['fmv']['intake_donate_fmv']" />
                                </td>
                                <td colspan="3">
                                    
                                </td>
                                <td colspan="3" style="text-align:right">
                                    $ <t t-esc="weight_summary['fmv']['closed_donate_fmv']" />
                                </td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-5">
                            <h2>Initial Estimate</h2>
                            <table class="table">
                                <thead>
                                    <tr class="o_report_header">
                                        <th class="o_report_line_header" colspan="2">Proposal Emissions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>S.R. (Resale, Donate, Relocate)</td>
                                        <td>
                                            <t t-esc="intake_estimate['sr']" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Recycle</td>
                                        <td>
                                            <t t-esc="intake_estimate['recycle']" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Landfill</td>
                                        <td>
                                            <t t-esc="intake_estimate['landfill']" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-2"></div>
                        <div class="col-5">
                            <h2>Closed Estimate</h2>
                            <table class="table">
                                <thead>
                                    <tr class="o_report_header">
                                        <th class="o_report_line_header" colspan="2">Report Emissions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>S.R. (Resale, Donate, Relocate)</td>
                                        <td>
                                            <t t-esc="closed_estimate['sr']" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Recycle</td>
                                        <td>
                                            <t t-esc="closed_estimate['recycle']" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Landfill</td>
                                        <td>
                                            <t t-esc="closed_estimate['landfill']" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="container">
                    <h2>Report Table</h2>
                    <table class="table">
                        <thead>
                            <tr class="o_report_header">
                                <th class="o_report_line_header">Resold</th>
                                <th class="o_report_line_header">Donated</th>
                                <th class="o_report_line_header">Recycled</th>
                                <th class="o_report_line_header">Relocated</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>
                                    <t t-esc="report['resale']" />
                                </td>
                                <td>
                                    <t t-esc="report['donation']" />
                                </td>
                                <td>
                                    <t t-esc="report['recycle']" />
                                </td>
                                <td>
                                    <t t-esc="report['relocate']" />
                                </td>
                            </tr>
                            <tr class="bg-secondary">
                                <td colspan="4"></td>
                            </tr>
                            <tr>
                                <td><strong>Landfilled</strong></td>
                                <td><strong>Donation FMV</strong></td>
                                <td><strong>S.R. Co2e</strong></td>
                                <td><strong>Recycle S.R.</strong></td>
                            </tr>
                            <tr>
                                <td>
                                    <t t-esc="report['landfill']" />
                                </td>
                                <td>
                                   $ <t t-esc="report['donate_fmv']" />    
                                </td>
                                <td><t t-esc="report['sr']"/></td>
                                <td><t t-esc="report['recycle_sr']"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
    
            </div>
        </template>
    </data>
</odoo>
