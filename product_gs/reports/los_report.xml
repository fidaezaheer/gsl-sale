<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="los_report_base">
            <div class="container-fluid o_stock_reports_page o_stock_reports_no_print">
                <span class="o_report_heading text-center"><h1>LOS Report</h1></span>
                <span><t t-esc="context"/></span>
                <div class="o_stock_reports_table table-responsive">
                    <t t-set="dc" t-value="len(dispositions)"/>
                    <t t-set="pc" t-value="len(partners)"/>
                    <table class="table">
                            <colgroup>
                                <col/>
                                <col style="background-color:#FAD7A0" span="3" />
                                <col style="background-color:#F9E79F" t-att-span="dc" />
                                <col style="background-color:#ABEBC6" t-att-span="pc" />
                            </colgroup>
                            <thead>
                                <tr class="o_report_header">
                                    <th class="o_report_line_header"></th>
                                    <th class="o_report_line_header text-center" colspan="3">Inventory</th>
                                    <th class="o_report_line_header text-center" t-att-colspan="dc">Disposition Types</th>
                                    <th class="o_report_line_header text-center" t-att-colspan="pc">Beneficiaries</th>
                                </tr>
                                <tr class="o_report_header">
                                    <th class="o_report_line_header" >Item</th>
                                    <th class="o_report_line_header" >Open</th>
                                    <th class="o_report_line_header" >Closed</th>
                                    <th class="o_report_line_header" >Present</th>
                                    
                                    <t t-foreach="dispositions" t-as="disposition">
                                        <th class="o_report_line_header" t-field="disposition.name" />
                                    </t>
                                    <t t-foreach="partners" t-as="partner">
                                        <th class="o_report_line_header" t-field="partner.name" />
                                    </t>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="lines" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line['item'].display_name" />
                                        </td>                                        
                                        <t t-foreach="line['data']" t-as="qty">
                                            <td>
                                                <t t-esc="qty" />
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                </div>
            </div>
        </template>
    </data>
</odoo>
