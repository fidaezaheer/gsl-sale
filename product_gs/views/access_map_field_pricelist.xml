<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_map_field_pricelist_tree" model="ir.ui.view">
            <field name="name">view_map_field_pricelist_tree</field>
            <field name="model">map.field.pricelist</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                    <field name="pricelist_id" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "model" -->
        <record id="view_map_field_pricelist_form" model="ir.ui.view">
            <field name="name">view_map_field_pricelist_form</field>
            <field name="model">map.field.pricelist</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="pricelist_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_map_field_pricelist_search" model="ir.ui.view">
            <field name="name">view_map_field_pricelist_search</field>
            <field name="model">map.field.pricelist</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="view_map_field_pricelist_search">
                    <field name="name" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_map_field_pricelist_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Field to pricelist mappings</field>
            <field name="res_model">map.field.pricelist</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_map_field_pricelist_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Human readable name
                </p><p>
                    Something about 
                </p>
            </field>
        </record>
        
        <!-- Main menu for "model" -->
        <record id="menu_map_field_pricelist" model="ir.ui.menu" >
            <field name="name">Field to pricelist mappings</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_map_field_pricelist_act_window" />
            <field name="parent_id" ref="base.menu_custom" />
        </record>
        
    </data>
</odoo>
