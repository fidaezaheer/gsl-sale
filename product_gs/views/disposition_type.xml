<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_disposition_type_tree" model="ir.ui.view">
            <field name="name">view_disposition_type_tree</field>
            <field name="model">disposition.type</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="false" delete="false" edit="false">
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for "model" -->
        <record id="view_disposition_type_form" model="ir.ui.view">
            <field name="name">view_disposition_type_form</field>
            <field name="model">disposition.type</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="false" delete="false" edit="false">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="sequence" />                                
                                <field name="code" />                                
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for "model" -->
        <record id="view_disposition_type_search" model="ir.ui.view">
            <field name="name">view_disposition_type_search</field>
            <field name="model">disposition.type</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                    <field name="code" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for "model" -->
        <record id="action_disposition_type" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Disposition Types</field>
            <field name="res_model">disposition.type</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_disposition_type_search" />
        </record>
        
        <!-- Main menu for "model" -->
        <record id="menu_disposition_type" model="ir.ui.menu" >
            <field name="name">Disposition types</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_disposition_type" />
            <field name="parent_id" ref="base.menu_custom" />
        </record>
    </data>
</odoo>
